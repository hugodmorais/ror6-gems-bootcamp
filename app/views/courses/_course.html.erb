<div class="card">
  <div class="card-header">
    <i class="fa fa-graduation-cap"></i> <%= link_to course.title, course_path(course) %>
  </div>
  <div class="card-body">
    <%= course.short_description.truncate(50) %>
  </div>
  <div class="card-footer d-flex justify-content-between">
    <div><i class="fa fa-globe-africa"></i> <%= course.language %></div>
    <div><i class="fa fa-signal"></i> <%= course.level %></div>
    <div><i class="fas fa-chalkboard-teacher"></i> <%= number_to_currency(course.price) %></div>
  </div>
  <div class="card-footer">
    <p>
      <i class="fas fa-stopwatch"></i> <%= course.created_at.strftime('%d-%b-%Y') %>
    </p>
    <p>
      <i class="fas fa-chalkboard-teacher"></i> <%= course.user %>
    </p>
  </div>
  <div class="card-footer">
    <%= link_to 'Show', course, class: 'btn btn-primary' %>
    <%= link_to 'Edit', edit_course_path(course), class: 'btn btn-warning' %>
    <%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
  </div>
</div>
