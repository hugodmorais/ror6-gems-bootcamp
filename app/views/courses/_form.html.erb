
<%= simple_form_for(@course) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <div class="row pt-2 pb-2">
      <%= f.label :avatar %>
      <% if @course.avatar.attached? %>
        <div class="col-md-4">
          <%= image_tag @course.avatar, width: "200px" %>
        </div>
      <% end %>
    </div>
    <div class="row pt-2 pb-2">
      <%= f.file_field :avatar %>
    </div>
    <%= f.label :description %>
    <%= f.rich_text_area :description %>
    <small><%= f.error :description, class: 'text-danger' %></small>
    <%= f.input :short_description %>
    <%= f.input :language, collection: Course.languages, include_blank: true %>
    <%= f.input :level, collection: Course.levels, include_blank: true %>
    <%= f.input :price %>
    <div class="row pt-2">
      <%= f.input :published %>
    </div>
  </div>

  <div class="form-actions pt-3">
    <%= f.button :submit %>
  </div>
<% end %>
