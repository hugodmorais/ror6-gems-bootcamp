<div class="card mt-2">
  <div class="card-header">
    <%= comment.created_at.strftime("%d/%b/%Y - %H:%M") %>
    <%= "(#{time_ago_in_words(comment.created_at)})" %>
    by <%= link_to comment.user, user_path(comment.user) %>
    <%= link_to 'Destroy', [@course, @lesson, comment], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %> 
  </div>
  <div class="card-body">
    <%= comment.content %>
  </div>
</div>
