<div class="card">
  <div class="card-header">
    <i class="fas fa-user"></i>
    <% if user.online? %>
      <span style="color: green;">
        <i class="fas fa-circle"></i>
      </span>
    <% else %>
      <span style="color: tomato;">
        <i class="fas fa-circle"></i>
      </span>
    <% end %>
    <%= link_to user_path(user) do %> 
      <%= user.email %>
    <% end %>
  </div>
  <div class="card-body">
    <i class="fas fa-stopwatch"></i> Sign Up <%= time_ago_in_words(user.created_at) %> ago
  </div>
  <div class="card-footer">
    <%= 'sign_in_count'.humanize %> <%= user.sign_in_count %> <br>
    <%= 'current_sign_in_at'.humanize %> <%= user.current_sign_in_at %> <br>
    <%= 'last_sign_in_at'.humanize %> <%= user.last_sign_in_at %> <br>
    <%= 'current_sign_in_ip'.humanize %> <%= user.current_sign_in_ip %> <br>
    <%= 'last_sign_in_ip'.humanize %> <%= user.last_sign_in_ip %> <br>
    Confirmed email? 
    <% if user.confirmed_at.present? %>
      <button type="button" class="btn btn-success btn-sm" disabled>Yes</button>
    <% else %>
      <button type="button" class="btn btn-danger btn-sm" disabled>No</button>
    <% end %>
  </div>
  <div class="card-footer">
    <% user.roles.each do |role| %>
      <button type="button" class="btn btn-info btn-sm" disabled><%= role.name %></button>
    <% end %>
    <%= link_to 'Edit roles', edit_user_path(user), class: "btn btn-warning btn-sm" if policy(user).edit? %>
  </div>
</div>
